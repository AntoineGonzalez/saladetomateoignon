{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/signup.css") }}">
{% endblock %}

{% block main %}
    <div class="container text-center">
        <h1 class="form-title">Nos kebab n'attendent que toi !</h1>
        <img class="title-img" src="{{ asset("images/salad.png") }}" alt="">


        {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            <img class="title-img" src="{{ asset("images/tomato.jpg") }}" alt="">
            {{ form_row(form.address) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.city) }}
            {{ form_row(form.cp) }}
            <img class="title-img" src="{{ asset("images/oignon.jpg") }}" alt="">
            {{ form_row(form.password) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
